@using Microsoft.AspNetCore.Components.Web
@namespace QuickBlazorUI.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <link href="css/app.css" rel="stylesheet" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />

</head>
<body class="h-full bg-secondary-100 dark:bg-secondary-800 dark:bg-secondary-800 dark:text-main overflow-x-hidden">

        @RenderBody()

    <div id="blazor-error-ui" class="hidden">
        <div class="flex justify-between bg-yellow-100 bottom-0 left-0 fixed w-full z-50 py-2.5 px-5 border-t-2 border-secondary-200 text-lg dark:bg-yellow-300 dark:text-secondary-800 dark:border-secondary-800">
            <p>
                An unhandled error has occurred.
                <a href="" class="reload text-blue-500">Reload</a>
            </p>
            <a class="dismiss cursor-pointer">🗙</a>
        </div>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
